package entidades;

public class ItemPedido {
	
	private Integer quantidade;
	private Double preço;
	
	public ItemPedido() {
	}

	public ItemPedido(Integer quantidade, Double preço) {
		this.quantidade = quantidade;
		this.preço = preço;
	}

	public Integer getQuantidade() {
		return quantidade;
	}

	public void setQuantidade(Integer quantidade) {
		this.quantidade = quantidade;
	}

	public Double getPreço() {
		return preço;
	}

	public void setPreço(Double preço) {
		this.preço = preço;
	}
	
	public void subTotal(Integer quantidade, Double preço) {
		this.preço = (quantidade * preço);
	}
}
